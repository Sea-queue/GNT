<div class="mb-3 mt-3 d-md-flex align-items-start gap-2 gap-lg-0"> 
  <%= render 'home/sidebar' %>
  <%= form_with(model: @user) do |f| %>
    <% if @user.errors.any? %>
      <div id='error_explanation'>
        <h2><%= pluralize(user.errors.count, 'error') %> prohibited this user from being saved:</h2>
        <ul>
          <% @user.errors.full_message.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
            
    <div class="card" style="border-radius: .5rem;">
      <div class="row g-0 gnt_NCLEX_form">
        <div class="col-md-12">
          <div class="card-body p-md-4 p-3">

            <h6 style='color:red'> * required fields </h6>
            <h5 class='section_title mt-2'>NCLEX</h5>
            <hr class="mt-0 mb-4">

            <div class="col-12 mb-3 d-flex flex-wrap">
              <h6>NCLEX exam status: * &nbsp;</h6>
              <%= f.select :nclex_rn, ['passed', 'exam scheduled', 'traning in progress'] %>
            </div>

            <div class="field mb-2 d-flex flex-wrap">
              <h6>Select NCLEX-RN State: * &nbsp</h6>
              <%= f.select :nclex_rn_state, options_for_select(us_states), :prompt => current_gnt_user.rn_in_us_state %>
            </div>

            <hr class="mt-0 mb-4">
            <div class="actions">
              <%= f.submit "Update", :onclick => "return confirm('Are you sure to update?')", class:"btn btn-danger mt-2" %>
            </div>

         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>