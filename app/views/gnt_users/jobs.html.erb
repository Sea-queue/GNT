<%= render 'home/progress' %>
<div class="mb-3 mt-3 d-md-flex align-items-start gap-2 gap-lg-0">
  <%= render 'home/sidebar' %>
  <%= form_with(model: @user) do |f| %>
    <% if @user.errors.any? %>
      <div id='error_explanation'>
        <h2><%= pluralize(user.errors.count, 'error') %> prohibited this user from being saved:</h2>
        <ul>
          <% @user.errors.full_message.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card" style="border-radius: .5rem;">
      <div class="row g-0 gnt_job_form">
        <div class="col-md-12">
          <div class="card-body p-md-4 p-3">

            <h6 style='color:red'> * required fields </h6>
            <h5 class='section_title mt-3'>Jobs</h5>
            <h5 class='section_sub_title mb-2' >Interview Plan</h5>
            <hr class="mt-0 mb-4">

            <div class="field mb-2 d-flex flex-wrap">
              <h6 class='profile_prompt'>Status: * &nbsp;</h6>
              <%= f.select(:interview_status, ['Pending', 'Scheduled', 'Complete'], {:prompt => current_gnt_user.interview_status}) %>
            </div>

            <div class="col-30 mb-3 d-flex flex-wrap">
              <h6 class='profile_prompt'>Interview Date: * &nbsp;</h6>
              <%= f.date_field :interview_date%>
            </div>

            <hr class="mt-3 mb-3">
            <div class="actions">
              <%= f.submit "Update", :onclick => "return confirm('Are you sure to update?')", class:"btn btn-danger mt-2" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>