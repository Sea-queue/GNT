<div class="card mb-3 mt-3" style="border-radius: .5rem;">
  <div class="row g-0">

    <div class="col-md-4 gradient-custom text-center text-white"
      style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
      <div class='filed mt-5'>
        <% if @user.avatar.attached? %>
          <%= image_tag(@user.avatar, height: '100px', width: '100px', class:'border border-2 rounded-5') %>
        <% else %>
          <%= image_tag 'gnt_logo.png', alt:"Avatar", class:"border border-3 rounded", style:"width: 150px" %>
        <% end %>
      </div>
      <div class='mt-3'>
        <h6 style='color:black'> <%= @user.full_name %> </h6>
      </div>
      <i style="color:black;" class="far fa-edit mb-5"></i>
    </div>

    <div class="col-md-8">
      <div class="card-body p-4">
        <h5>Basic Information</h5>
        <hr class="mt-0 mb-4">

        <div class="row pt-1">
          <div class="col-6 mb-3">
            <h6>Full legal name*:</h6>
            <h6 style='color:red'><%= @user.legal_name %></h6>
          </div>

          <div class="col-6 mb-3" style="display: flex">
            <h6>Nationality: &nbsp</h6>
            <h6 style='color:red'><%= @user.nationality %></h6>
          </div>

          <div class="col-6 mb-3" style="display: flex">
            <h6>Email: &nbsp</h6>
            <h6 style='color:red'><%= @user.email%></h6>
          </div>

          <div class="col-6 mb-3" style="display: flex">
            <h6>Current country of resident: &nbsp</h6>
            <h6 style='color:red'><%= @user.current_resident %></h6>
          </div>

          <div class="col-20 mb-3" style="display: flex">
            <h6>I am: &nbsp</h6>
            <h6 style='color:red'><%= @user.i_am %></h6>
          </div>

          <div class="field mb-2">
            <h6>Year of expected graduation: &nbsp</h6>
            <h6 style='color:red'><%= @user.year_of_graduation %></h6>
          </div>

          <div class="field mb-2">
            <h6>Are you currently working as a registered nurse in a clinical setting?: &nbsp</h6>
            <h6 style='color:red'><%= @user.currently_working %></h6>
          </div>

          <div class="col-6 mb-3" style="display: flex">
            <h6>Years of experience: &nbsp</h6>
            <h6 style='color:red'><%= @user.years_of_experience %></h6>
          </div>

          <div class="col-6 mb-3" style="display: flex">
            <h6>Languages spoken: &nbsp</h6>
            <h6 style='color:red'><%= @user.langauges_spoken %></h6>
          </div>

          <div class="col-6 mb-3" style="display: flex">
            <h6>Apply visa for: &nbsp</h6>
            <h6 style='color:red'><%= @user.apply_visa_for %></h6>
          </div>

          <div class="col-6 mb-3">
            <h6>Phone number:</h6>
            <h6 style='color:red'><%= @user.phone_number %></h6>
          </div>

          <div class="field mb-2">
            <h6>Authorize contact by WhatsApp:</h6>
            <h6 style='color:red'><%= @user.auth_whatsapp %></h6>
          </div>

          <div class="field mb-2">
            <h6>Authorize contact by telephone and text messaging:</h6>
            <h6 style='color:red'><%= @user.auth_text %></h6>
          </div>
        </div>

        <h5 class='mt-2'>Nursing Credentials</h5>
        <hr class="mt-0 mb-4">
        <div class="row pt-1">
          <div class="col-20 mb-3" style="display: flex">
            <h6>Nurse License: &nbsp</h6>
            <% if @user.RN_License.attached? %>
              <%= link_to @user.RN_License.filename, url_for(@user.RN_License) %>
            <% end %>
          </div>

          <div class="col-20 mb-3" style="display: flex">
            <h6>License Type: &nbsp</h6>
            <h6 style='color:red'><%= @user.license_type %></h6>
          </div>

          <div class="col-20 mb-3" style="display: flex">
            <h6>Resume: &nbsp</h6>
          </div>

          <div class="col-20 mb-3" style="display: flex">
            <h6>I have never had any investigation, suspension or disciplinary action on my professional license or certification: &nbsp</h6>
            <h6 style='color:red'><%= @user.stage3_1 %></h6>
          </div>

          <div class="col-20 mb-3" style="display: flex">
            <h6>Diploma of Nursing Education: &nbsp</h6>
          </div>

          <div class="col-20 mb-3" style="display: flex">
            <h6>Diploma of Nursing Education English translation: &nbsp</h6>
          </div>

          <div class="col-20 mb-3" style="display: flex">
            <h6>Nursing Education Transcript: &nbsp</h6>
          </div>

          <div class="col-20 mb-3" style="display: flex">
            <h6>Nursing Education Transcript English translation: &nbsp</h6>
          </div>

          <div class="col-20 mb-3" style="display: flex">
            <h6>Number of clinical hours in the nursing program and located specialties: &nbsp</h6>
            <h6 style='color:red'><%= @user.clinical_hour %></h6>
          </div>

          <div class="col-20 mb-3" style="display: flex">
            <h6>Check all applicable specialties:</h6>
          </div>

          <div class="col-20 mb-3" style="display: flex">
            <h6>Is there anything else our Recruitment Team should know?</h6>
            <h6 style='color:red'><%= @user.other_1 %></h6>
          </div>
        </div>

        <h5 class='mt-2'>US Nursing Credentials</h5>
        <hr class="mt-0 mb-4">
        <div class="col-20 mb-3" style="display: flex">
          <h6>CGFNS VisaScreen Report: &nbsp</h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>English proficiency exam status: &nbsp</h6>
          <h6 style='color:red'><%= @user.english_proficiency %></h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>English proficiency exam result: &nbsp</h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>English proficiency exam passed date: &nbsp</h6>
          <h6 style='color:red'><%= @user.english_exam_pass_date %></h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>Passed the NCLEX-RN: &nbsp</h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>I have Licensure to work as a Registered Nurse in a US State: &nbsp</h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>I have submitted fingerprint background checks to State Licensing authority: &nbsp</h6>
          <h6 style='color:red'><%= @user.background_check %></h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>Is there anything else our Recruitment Team should know?</h6>
          <h6 style='color:red'><%= @user.other_2 %></h6>
        </div>

        <h5 class='mt-2'>Immigration Documentation</h5>
        <hr class="mt-0 mb-4">
        <div class="col-20 mb-3" style="display: flex">
          <h6>Original or certified copy of Birth Certificate: &nbsp</h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>Translation of Birth Certificate: &nbsp</h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>Valid Passport (biographic page): &nbsp</h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>Current or former US Visa(s): &nbsp</h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>U.S. Entry Stamp or I-94 Departure/Arrival record: &nbsp</h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>I have never been convicted of a crime: &nbsp</h6>
          <h6 style='color:red'><%= @user.convicted_crime %></h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>I have not had any substance use disorder in the last five years: &nbsp</h6>
          <h6 style='color:red'><%= @user.disorder %></h6>
        </div>

        <div class="col-20 mb-3" style="display: flex">
          <h6>Is there anything else our Recruitment Team should know?</h6>
          <h6 style='color:red'><%= @user.other_3 %></h6>
        </div>
      </div>
    </div>
  </div>
</div>

<% if current_gnt_user.id == @user.id %>
  <%= link_to 'Edit My Profile', edit_gnt_user_path(current_gnt_user), class:'btn btn-primary' %>
<% end %>

