<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  
  <h1>Editing <%= current_gnt_user.full_name %></h1>

  <div class="card mb-3" style="border-radius: .5rem;">
    <div class="row g-0">
      <div class="col-md-4 gradient-custom text-center text-white"
        style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
        <%= image_tag 'gnt_logo.png', alt:"Avatar", class:"img-fluid mt-5", style:"width: 150px;" %>
        <div>
          <h6 style='color:black'> Full Name </h6>
          <%= f.text_field :full_name, autofocus: true, placeholder: current_gnt_user.full_name %>
        </div>
        <i style="color:black;" class="far fa-edit mb-5"></i>
      </div>
      <div class="col-md-8">
        <div class="card-body p-4">
          <h6>Information</h6>
          <hr class="mt-0 mb-4">

          <div class="row pt-1">
            <div class="col-6 mb-3">
              <h6>Email</h6>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="col-6 mb-3">
              <h6>Nationality</h6>
              <div class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">options</a>
                <ul class="dropdown-menu">
                  <h6> Singapore </h6>
                  <h6> Chile </h6>
                  <h6> the United States </h6>
                </ul>
              </div>
            </div>
          </div>

          <div class="row pt-1">
            <div class="col-6 mb-3">
              <h6>Current Resident</h6>
            </div>
            <div class="col-6 mb-3">
              <h6>I am:</h6>
              <div class="field mb-2">
                <%= f.check_box :remember_me %> Enrolled in a nursing program
              </div>
              <div class="field mb-2">
                <%= f.check_box :remember_me %> Registered nurse outside the United States
              </div>
            </div>
          </div>

          <h6>Login Updates</h6>
          <hr class="mt-0 mb-4">
          <div class="row pt-1">
            <div class="col-6 mb-3">
              <div class="field">
                <h6>Password</h6> 
                <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>
            </div>
            <div class="col-6 mb-3">
              <div class="field">
                <h6>Password Confirmation</h6>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
            </div>
          </div>

          <br /><h6>* Enter your Current Password to Update</h6>
          <hr class="mt-0 mb-4">
          <div class="field">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
          <div class="actions">
            <%= f.submit "Update", class:"btn btn-danger mt-2"%>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>

<hr class="mt-0 mb-4">
<%= button_to "Cancel my Account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
