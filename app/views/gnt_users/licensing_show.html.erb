<div class="mb-3 mt-3" style="display: flex; border-radius: .5rem">
  <%= render 'home/sidebar' %>
  <%= form_with(model: @user) do |f| %>
    <% if @user.errors.any? %>
      <div id='error_explanation'>
        <h2><%= pluralize(user.errors.count, 'error') %> prohibited this user from being saved:</h2>
        <ul>
          <% @user.errors.full_message.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
            
    <div class="card" style="border-radius: .5rem;">
      <div class="row g-0">
        <div class="col-md-12">
          <div class="card-body p-4">

            <%= link_to 'Edit', licensing_path(current_gnt_user), class:"btn dashboard_button mb-3" %>

            <h6 style='color:red'> * required fields </h6>
            <h5 class='section_title mt-2'>Licensing</h5>
            <hr class="mt-0 mb-4">
            <div class="col-20 mb-3" style="display: flex">
            <h6>I have an active license to work as a Registered Nurse in the United States.: &nbsp</h6>
              <h6 class='profile_text'><%= @user.rn_in_us %></h6>
            </div>

            <div class="col-20 mb-3" style="display: flex">
              <h6>Licensure State: &nbsp</h6>
              <h6 class='profile_text'><%= @user.rn_in_us_state %></h6>
            </div>

            <div class="col-20 mb-3" style="display: flex">
              <h6>I affirm that my fingerprints have been submitted for the purpose of state licensure, and I understand that my application may be subject to verification by the respective state nursing board.: &nbsp</h6>
              <h6 class='profile_text'><%= @user.background_check %></h6>
            </div>

          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
