<%= render 'home/progress' %>
<div class="mb-3 mt-3 d-md-flex align-items-start gap-2 gap-lg-0"> 
  <%= render 'home/sidebar' %>
  <%= form_with(model: @user) do |f| %>
    <% if @user.errors.any? %>
      <div id='error_explanation'>
        <h2><%= pluralize(user.errors.count, 'error') %> prohibited this user from being saved:</h2>
        <ul>
          <% @user.errors.full_message.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
            
    <div class="card" style="border-radius: .5rem;">
      <div class="row g-0">
        <div class="col-md-12">
          <div class="card-body p-md-4 p-3">

            <%= link_to 'Edit', licensing_path(current_gnt_user), class:"btn dashboard_button_edit mb-3" %>

            <h5 class='section_title mt-2'>Licensing</h5>
            <h5 class='section_sub_title'>STEP 1</h5>
            <hr class="mt-0 mb-3">
            <h6>Follow <a href=" https://www.ncsbn.org/membership/us-members/contact-bon.page" target="_blank"> this link </a> to find the state board of nursing's website that you plan to receive your nursing license in.</h6>
            <h6><i>Select "visit website" and create a profile to apply.</i></h6>
            <h6><i>Review that state website's application instructions and costs for "Licensure by Exam".</i></h6>
           
            <h5 class='section_sub_title'>STEP 2</h5>
            <hr class="mt-0 mb-3">
            <div class="col-20 mb-3" style="display: flex">
              <h6 class='profile_prompt'>I have an active license to work as a Registered Nurse in the United States: &nbsp</h6>
              <h6 class='profile_text'><%= @user.rn_in_us %></h6>
            </div>

            <div class="col-20 mb-3" style="display: flex">
              <h6 class='profile_prompt'>Licensure State: &nbsp</h6>
              <h6 class='profile_text'><%= @user.rn_in_us_state %></h6>
            </div>

            <div class="col-20 mb-3" style="display: flex">
              <h6 class='profile_prompt'>License number: &nbsp</h6>
              <h6 class='profile_text'><%= @user.license_number %></h6>
            </div>

            <div class="col-20 mb-3" style="display: flex">
              <h6 class='profile_prompt'>Expiration date: &nbsp</h6>
              <h6 class='profile_text'><%= @user.expiration_date %></h6>
            </div>

            <div class="col-20 mb-3" style="display: flex">
              <h6 class='profile_prompt'>Additional active compact license: &nbsp</h6>
              <h6 class='profile_text'><%= @user.additional_active_compact_license %></h6>
            </div>

            <div class="col-20 mb-3">
              <h6 class='profile_prompt'>I affirm that my fingerprints have been submitted for the purpose of state licensure, and I understand that my application may be subject to verification by the respective state nursing board: &nbsp</h6>
              <h6 class='profile_text'><%= @user.background_check %></h6>
            </div>

            <div class="col-20 mb-3" style="display: flex">
              <h6 class='profile_prompt'>Board of Nursing fingerprint status: &nbsp</h6>
              <h6 class='profile_text'><%= @user.fingerprint_status %></h6>
            </div>

            <div class="col-20 mb-3" style="display: flex">
              <h6 class='profile_prompt'>Fingerprint submission date: &nbsp</h6>
              <h6 class='profile_text'><%= @user.fingerprint_date %></h6>
            </div>

          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
