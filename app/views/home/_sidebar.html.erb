<div class="d-flex flex-column flex-shrink-0 p-3 bg-body-tertiary align-items-center" style="width: 250px;">
  <div>
    <br>
    <a href="#" class="d-flex align-items-center link-body-emphasis text-decoration-none"  aria-expanded="false">
      <%= image_tag(@user.avatar, height: '100px', width:"100px", class:'border border-2 rounded-circle') %>
    </a>
    <br>
    <div>
      <a style="font-size: 20px;">Welcome,</a>
    </div>
    <div>
      <strong style="font-size: 20px;"><%= @user.full_name %></strong>
    </div>
  </div>

  <hr>

  <ul class="nav nav-pills flex-column mb-auto" style="margin-left: 20%">
    <li class="nav-item mt-1 mb-1">
      <%= link_to image_tag('register.svg')+' Register', register_path(current_gnt_user), class:"btn text-decoration-none dashboard_button" %>
    </li>

    <li class="nav-item mt-1 mb-1">
      <%= link_to image_tag('get_started.svg')+' Getting Started', edit_gnt_user_path(current_gnt_user), class:"btn dashboard_button" %>
