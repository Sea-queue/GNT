        <button type="button" class="btn btn-warning" disabled><%= link_to image_tag('screening.svg') %> Screening</button>
      <% end %>
    </li>

    <li class="nav-item mt-1 mb-1">
      <% if current_gnt_user.id == @user.id and current_gnt_user.grant_apply_request %>
        <%= link_to image_tag('orientation.svg')+' Orientation', orientation_path(current_gnt_user), class:'btn btn-warning' %>
      <% else %>
        <button type="button" class="btn btn-warning" disabled> <%= link_to image_tag('orientation.svg') %> Onboarding </button>
      <% end %>
