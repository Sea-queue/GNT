        <%= link_to image_tag('professional.svg')+' Professional Info', '', class:"btn text-decoration-none dashboard_button" %>
      <% end %>
    </li>

    <li class="nav-item mt-1 mb-1">
      <% if current_gnt_user.id == @user.id and current_gnt_user.grant_apply_request %>
