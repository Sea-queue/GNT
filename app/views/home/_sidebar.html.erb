        <%= link_to image_tag('jobs.svg')+' Jobs', jobs_path(current_gnt_user), class:'btn btn-warning' %>
      <% else %>
        <button type="button" class="btn btn-warning" disabled><%= link_to image_tag('jobs.svg') %> Jobs </button>
      <% end %>
    </li>

    <li class="nav-item mt-1 mb-1">
      <% if current_gnt_user.id == @user.id and current_gnt_user.grant_apply_request %>
