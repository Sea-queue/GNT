<header class="navbar-custom" >
  <div class="container">
    <div class="header_wrap d-flex flex-wrap align-items-center justify-content-between ">
      <ul class="col-md-15 d-flex p-0 mb-md-0 align-items-center">

        <%= link_to image_tag('kynd_longlogo.svg'), root_path, class:'nav-link active header_logo'%>
        
        <% if current_gnt_user %>
          <% if false %>
            <li class="nav-item dropdown">
              <% if current_gnt_user.languages_spoken == 'Español' %>
                <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                  Ángeles de talento América
                </a>
              <% else %>
                <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                  Talent Angels America
                </a>
              <% end %>
              <ul class="dropdown-menu">
                <li class="nav-item" >
                  <%= link_to 'Home', root_path, class:'nav-link active'%>
                </li>
                <li class="nav-item">
                  <%= link_to 'About Us', home_about_path, class:'nav-link active' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Contact Us', home_contact_us_path, class:"nav-link active" %>
                </li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <% if false %>
            <li class="nav-item" >
              <%= link_to 'Home', root_path, class:'nav-link active'%>
            </li>
            <li class="nav-item">
              <%= link_to 'About Us', home_about_path, class:'nav-link active' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Contact Us', home_contact_us_path, class:"nav-link active" %>
            </li>
          <% end %>
        <% end %>

        <% if current_gnt_user && current_gnt_user.admin? %>
          <li class="nav-item dropdown mt-1">
            <a class="nav-link dropdown-toggle mt-3" role="button" data-bs-toggle="dropdown" style='font-size: 25px'>
              Admin
            </a>
            <ul class="dropdown-menu">
              <li class="nav-item">
                <%= link_to 'Statistics', admin_pages_statistics_path, class:"nav-link active"%>
              </li>
            </ul>
          </li>
        <% end %>

        <% if false %>
          <% if current_gnt_user %>
            <a class="nav-link dropdown-toggle header_text" role="button" data-bs-toggle="dropdown">
              International Nurses
            </a>
            <ul class="dropdown-menu">
              <% if current_gnt_user && current_gnt_user.candidate? %>
                <li class="nav-item">
                  <%= link_to 'Application Status', candidates_pages_application_status_path, class:'nav-link active' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Edit Settings', edit_gnt_user_registration_path, class:'nav-link active' %>
                </li>
              <% end %>
              <li class="nav-item" >
                <%= link_to 'How To Apply', root_path, class:'nav-link active'%>
              </li>
              <li class="nav-item">
                <%= link_to 'News Feed', home_news_feed_path, class:'nav-link active' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Resources', home_resources_path, class:'nav-link active' %>
              </li>
              <li class="nav-item">
                <%= link_to 'FAQ', home_faq_path, class:"nav-link active" %>
              </li>
            </ul>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                  Employers
                </a>
                <ul class="dropdown-menu">
                </ul>
              </li>
          <% end %>
        <% end %>
      </ul>

      <% if gnt_user_signed_in? %>
        <% if current_gnt_user.admin? %>
          <div class=" col-md-4 text-end">
            <%= link_to 'Sign Out', destroy_gnt_user_session_path, data: { turbo_method: :delete }, class:'btn sign_in_out' %>
          </div>
        <% else %>
          <% if false %>
            <%= form_with(model: @user) do |f| %>
              <%= f.select :languages_spoken, ["System Language", "Español", "English"]%>
              <%= f.submit "Change Language", class:"btn btn-danger mr-3" %>
            <% end %>
          <% end %>
          <div class="btn-group">
            <%= link_to image_tag('user.svg'), register_path(current_gnt_user), class:'btn profile_icon' %><%= link_to 'Profile', register_path(current_gnt_user), class:'btn profile_button text-decoration-none' %>
            <button type="button" class="btn profile_arrow dropdown-toggle dropdown-toggle-split" style="font-size: 20px;" data-bs-toggle="dropdown" aria-expanded="false"></button>
            <ul class="dropdown-menu">
              <li><%= link_to image_tag('settings.svg')+'  Settings', edit_gnt_user_registration_path, class:'text-decoration-none text-dark', style:'margin-left: 20px' %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to image_tag('logout.svg')+'  Sign Out', destroy_gnt_user_session_path, data: { turbo_method: :delete }, class:'text-decoration-none text-dark', style:'margin-left: 22px' %></li>
            </ul>
          </div>
        <% end %>
      <% else %>
        <div class=" col-md-4 text-end">
          <%= link_to 'Begin Here', new_gnt_user_registration_path, class:'btn apply' %>
          <%= link_to 'Sign In', new_gnt_user_session_path, class:'btn sign_in_out me-2' %>
        </div>
      <% end %>
    </div>
  </div>
</header>

